{% extends '/layouts/default.twig' %}

{% block content %}
<div class="container">
    {% for elem in orders %}
    <div class="card " style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">Заказ от {{ elem.created_at }} </h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ elem.id }}  </h6>
            <p class="card-text">{{ elem.comment }}</p>
            <p class="card-text">{{ elem.order_status_id }}</p>
            <a href="/orders/{{ elem.id }}" class="card-link">Подробнее</a>

        </div>

    </div>
    {% endfor %}
</div>
{% endblock %}